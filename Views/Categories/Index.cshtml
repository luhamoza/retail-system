@model List<Category>

@section title {
    <h1>Categories</h1>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td><a class="btn-link" asp-controller="Categories" asp-action="Edit" asp-route-id=@category.CategoryId>Edit</a></td>
                    </tr>
                }
        </tbody>
    </table>
}
