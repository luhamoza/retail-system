@model List<Product>

@section title {
    <h1>Product Page</h1>
}

@if (Model != null && Model.Count() > 0)
{
   <table class="table">
       <thead>
           <tr>
               <th scope="col">Category Name</th>
               <th scope="col">Product Name</th>
               <th scope="col">Quantity</th>
               <th scope="col">Price</th>
               <th></th>
               <th></th>
           </tr>
       </thead>
       <tbody>
           @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Category?.Name</td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price</td>
                    <td><a class="btn-link" asp-controller="Products" asp-action="Edit" asp-route-id=@product.ProductId>Edit</a></td>
                    <td><a class="btn-link" asp-controller="Products" asp-action="Delete" asp-route-productId=@product.ProductId onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
   </table> 
}

<a class="btn btn-primary" asp-controller="Products" asp-action="Add">Add</a>

@section Scripts{
    <script>
      function confirmDelete() {
           return confirm("Are you sure you want to delete this product?")
       }
    </script>

}
